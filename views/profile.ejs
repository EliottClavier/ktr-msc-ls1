<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
    <body class="container-fluid">

        <p id="users-list"></p>

        <button type="button" class="btn btn-outline-primary" id="btn-logout" onclick="logout()">Logout</button>

        <div class="row justify-content-center align-items-center py-5">
            <div class="col-8">
                <div class="row">
                    <div class="col-8">
                        <h1><%= username %>, your business cards</h1>
                    </div>
                    <% if (userData.businessCards.length) { %>
                        <div class="col-4 text-center">
                            <a href="/library/" class="btn btn-primary mt-3">Create a business card</a>
                        </div>
                    <% } %>
                </div>

                <hr class="custom-hr">

                <% if (userData.businessCards.length) { %>
                    <div id="business-cards-wrapper">
                        <% userData.businessCards.forEach(bc => { %>
                            <div class="custom-input">
                                <p><span style="font-weight: bold">Name:</span> <%= bc.name %></p>
                                <p><span style="font-weight: bold">Company name:</span> <%= bc.companyName %></p>
                                <p><span style="font-weight: bold">Mail</span>: <%= bc.mail %></p>
                                <p><span style="font-weight: bold">Phone number:</span> <%= bc.phoneNumber %></p>
                            </div>
                        <% }) %>
                    </div>

                <% } else { %>
                    <div class="text-center mt-4">
                        <h3>No business cards.</h3>
                        <a href="/library/" class="btn btn-primary mt-3">Create a business card</a>
                    </div>
                <% } %>
            </div>
        </div>
    </body>
    <%- include('./partials/socketio') %>
    <script src="/javascripts/profile.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>
