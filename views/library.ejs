<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body class="container-fluid overflow-hidden" style="max-height: 100vh">
<div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-8">
        <h1>Create new business card</h1>
        <hr class="custom-hr">
        <form method="POST" action="/library">
            <% fields.forEach((field) => { %>
                <% if (field.split) { %>
                    <div class="row">
                        <% field.split.forEach((subfield) => { %>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="<%= subfield.name %>"><%= subfield.label %></label>
                                    <input
                                        type="<%= subfield.type %>"
                                        class="form-control custom-input shadow-none"
                                        name="<%= subfield.name %>"
                                        id="<%= subfield.name %>"
                                        <%= subfield.required && (`required`) %>
                                        <%= subfield.minlength && (`minlength=${ subfield.minlength }`) %>
                                        <%= subfield.pattern && (`pattern=${ subfield.pattern}`) %>
                                    />
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="form-group my-4">
                        <label for="<%= field.name %>"><%= field.label %></label>
                        <input
                            type="<%= field.type %>"
                            class="form-control custom-input shadow-none"
                            name="<%= field.name %>"
                            id="<%= field.name %>"
                            <%= field.required && (`required`) %>
                            <%= field.minlength && (`minlength=${ field.minlength }`) %>
                            <%= field.pattern && (`pattern=${field.pattern}`) %>
                        />
                    </div>
                <% } %>
            <% }); %>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
            </div>
        </form>
    </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>
