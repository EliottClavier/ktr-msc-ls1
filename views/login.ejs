<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
    <body class="container-fluid" style="max-height: 100vh">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-6">
                <h1>Login</h1>
                <hr class="custom-hr">
                <form method="POST" action="/login" id="form-profile">
                    <% fields.forEach((field) => { %>
                        <div class="form-group my-4">
                            <label for="<%= field.name %>"><%= field.label %></label>
                            <input
                                type="<%= field.type %>"
                                class="form-control custom-input shadow-none"
                                name="<%= field.name %>"
                                id="<%= field.name %>"
                                <%= field.required && (`required`) %>
                                <%= field.minlength && (`minlength=${ field.minlength }`) %>
                                <%= field.pattern && (`pattern=${field.pattern}`) %>
                            />
                        </div>
                    <% }); %>

                    <% if (errorMessagePassword) { %>
                        <div class="form-group mt-2">
                            <p>Name / Password does not exist.</p>
                        </div>
                    <% } %>

                    <% if (errorMessageUserAlreadyConnected) { %>
                        <div class="form-group mt-2">
                            <p>User already connected on another device / browser.</p>
                        </div>
                    <% } %>

                    <div class="text-center mt-4">
                        <a class="btn btn-outline-primary btn-lg" href="/profile/">Register</a>
                        <button type="submit" class="btn btn-primary btn-lg">Connect</button>
                    </div>
                </form>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
